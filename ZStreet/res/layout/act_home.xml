<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/act_home_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/act_home_lin"
        android:background="#828282" />

    <LinearLayout
        android:id="@+id/act_home_lin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" >

        <LinearLayout
            android:id="@+id/act_home_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_homeimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/act_home_hometv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textColor="#ff253c" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_typeimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/type1" />

            <TextView
                android:id="@+id/act_home_typetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textColor="#272636" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_cartimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cart1" />

            <TextView
                android:id="@+id/act_home_carttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textColor="#272636" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/act_home_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/act_home_myimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/my1" />

            <TextView
                android:id="@+id/act_home_mytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="#272636" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>